@page
@model UserAuthenticationApp.Pages.Account.Register.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Page title from ViewData -->
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!-- Custom site styles -->
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header>
        <!-- Navbar with Acticheck logo -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/acticheck-logo.png" alt="Acticheck Logo" height="30">
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <!-- Register form -->
        <h1>Register</h1>

        <form method="post">
            <div class="form-group">
                <!-- Username input -->
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!-- Email input -->
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!-- Password input with strength meter -->
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" type="password" id="Input_Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div id="password-strength-meter" class="mt-2"></div>
            </div>

            <div class="form-group">
                <!-- Confirm Password input -->
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <!-- Two-Factor Authentication option -->
                <input asp-for="Input.EnableTfa" class="form-check-input" type="checkbox" />
                <label class="form-check-label" asp-for="Input.EnableTfa">Enable Two-Factor Authentication</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

    <footer>
        <!-- Footer content -->
    </footer>

    <!-- JavaScript libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Password strength meter script
        $('#Input_Password').on('input', function () {
            var password = $(this).val();
            var meter = $('#password-strength-meter');
            var strength = checkPasswordStrength(password);
            meter.removeClass().addClass('strength-' + strength).text('Strength: ' + strength);
        });

        // Function to check password strength
        function checkPasswordStrength(password) {
            var strength = 0;
            // Password criteria checks
            if (password.length >= 8) strength += 1;
            if (/[a-z]/.test(password)) strength += 1;
            if (/[A-Z]/.test(password)) strength += 1;
            if (/\d/.test(password)) strength += 1;
            if (/[\W_]/.test(password)) strength += 1;

            // Return strength level
            switch (strength) {
                case 0:
                case 1:
                    return "very weak";
                case 2:
                    return "weak";
                case 3:
                    return "medium";
                case 4:
                    return "strong";
                case 5:
                    return "very strong";
                default:
                    return "very weak";
            }
        }
    </script>

    <!-- Custom styles -->
    <style>
        .strength-very-weak {
            color: red;
        }

        .strength-weak {
            color: orange;
        }

        .strength-medium {
            color: yellow;
        }

        .strength-strong {
            color: lightgreen;
        }

        .strength-very-strong {
            color: green;
        }
    </style>
</body>
</html>
