@page
@model UserAuthenticationApp.Pages.Account.Login.LoginModel
@{
    // Set the title of the page
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <!-- Page title from ViewData -->
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!-- Custom site styles -->
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header>
        <!-- Navbar with Acticheck logo -->
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/images/acticheck-logo.png" alt="Acticheck Logo" height="30">
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <!-- Login form -->
        <h1>Login</h1>

        <form method="post" class="needs-validation" novalidate>
            <!-- Display model-level errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <!-- Username or Email input -->
                <label for="usernameOrEmail" class="form-label">Username or Email</label>
                <input asp-for="Input.UsernameOrEmail" class="form-control" id="usernameOrEmail" name="usernameOrEmail" required>
                <!-- Display field-level errors -->
                <div class="invalid-feedback">
                    <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <!-- Password input -->
                <label for="password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" id="password" name="password" required>
                <!-- Display field-level errors -->
                <div class="invalid-feedback">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                </div>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    <div>
        <a asp-page="/Account/ForgotPassword">Forgot your password?</a>
    </div>

    <footer>
        <!-- Footer content -->
    </footer>

    <!-- JavaScript libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Form validation script
        (function () {
            'use strict';

            var forms = document.querySelectorAll('.needs-validation');

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
</body>
</html>
